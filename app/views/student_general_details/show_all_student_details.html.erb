<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1>Student Details</h1>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <div id="buttoncontainer">
    <%=  link_to  "#{t('create')}", :controller => "student_general_details",
                 :action => "new", :id => @st, :student_id => params[:id], :batch_id => params[:batch_id] %>
  </div>
    
  <div class="line-separator"></div>
 
    
 <div id="application-list">
      <table id="listing" align="left" cellpadding="3" cellspacing="0">
        <tr class="tr-head">
          <th>Period</th>
          <th>Days Absent</th>
          <th>Days Tardy</th>
          <th>Actions</th>
        </tr>
        <% @st.each do |st| %>
          <tr class="tr-read-even">
            <td class="col-0"><%=h st.period %></td>
            <td class="col-0"><%=h st.daysAbsent %></td>
            <td class="col-0"><%=h st.daysTardy %></td>
            <td class="col-0"><%= link_to 'Edit', :controller => "student_general_details", :action => "edit",
                :id => st, :student_id => params[:id], :batch_id => params[:batch_id]  %>
              |<%= link_to 'Delete', st, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>  
 </div>

<div class="line-separator"></div>
 
 <div id="application-list">
  <table id="listing" align="left" cellpadding="3" cellspacing="0">
    <tr class="tr-head">
      <th><b>Puntuality</b></th>
      <th><b>Work Order And Appearance</b></th>
      <th><b>Social Skills</b></th>
      <th><b>Morals </b></th>
      <th><b>Conduct </b></th>
      <th><b>Actions</b></th>
    </tr>
    <% @st.each do |st| %>
      <tr class="tr-read-even">
        <td class="col-0"><%=h st.effort %></td>
        <td class="col-0"><%=h st.workOrderAndAppearance %></td>
        <td class="col-0"><%=h st.socialSkills %></td>
        <td class="col-0"><%=h st.morals %></td>
        <td class="col-0"><%=h st.conduct %></td>
        <td class="col-0"><%= link_to 'Edit',  :action => "edit", :id => st, :student_id => params[:id], :batch_id => params[:batch_id]  %>
        |<%= link_to 'Delete', st, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
 </div>

<div class="line-separator"></div>

 <div id="application-list">
  <table id="listing" align="left" cellpadding="3" cellspacing="0">
    <tr class="tr-head">
      <th><b>Demerit </b></th>
      <th><b>Actions</b></th>
    </tr>
    <% @st.each do |st| %>
      <tr class="tr-read-even">
        <td class="col-0"><%=h st.demerit %></td>
        <td class="col-0"><%= link_to 'Edit', :action => "edit", :id => st, :student_id => params[:id], :batch_id => params[:batch_id]  %>
        |<%= link_to 'Destroy', st, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
 </div>
</div>

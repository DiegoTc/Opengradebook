      <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="box">

    <%# if permitted_to? :index, :courses %>

        <div class="link-box">
          <div class="link-heading"><%= link_to "#{t('gradebook_text')}", {:controller => "school_reports", :action => "gradebook_option", :id => 1} %></div>
        </div>

        <div class="link-box">
          <div class="link-heading"><%= link_to "#{t('biweekly_report')}", {:controller => "school_reports", :action => "biweekly_option", :id => 1} %></div>
        </div>

    <%# end %>

  </div>

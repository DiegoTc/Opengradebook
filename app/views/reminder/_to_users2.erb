
<% string = @students_user.inject('') { |arr, u| arr + u.id.to_s + ',' }.chomp(',') %>
<% add = "<span>#{t('add')}</span>" %>
<div class="label-field-pair">
  <label for="student_grade"><%= t('select_recipient') %></label>
  <div class ="scrolable" >
    <div class="scroll-inside">
      <div class="hover"><%= link_to "#{t('select_all')}  <span>#{t('add')}</span>", '#', :onClick => "add_all_copies('#{string}')", :class=> 'all' %>

      </div>
      <% @students_user.each do |user| %>
          <div class="hover"><%= link_to user.full_name+add  , '#', :onClick => "add_copy(#{user.id})", :class=>'individual',
                                         :before => "Element.show('loader')",
                                         :success => "Element.hide('loader')" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
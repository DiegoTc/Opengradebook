

<% string = @guardians.inject('') { |arr, u| arr + u.to_s + ',' }.chomp(',') %>
<% add = "<span>#{t('add')}</span>" %>
<div class="label-field-pair">
  <label for="parent"><%= t('select_parent') %></label>
  <div class ="scrolable" >
    <div class="scroll-inside">
      <div class="hover"><%= link_to "#{t('select_all')}  <span>#{t('add')}</span>", '#', :onClick => "add_all_recipient('#{string}')", :class=> 'all' %>   
      </div>
       <% @guardians.each do |u| %>
        <% user = User.find(u.to_s) %>
        <div class="hover"><%= link_to user.full_name+add  , '#', :onClick => "add_recipient(#{u})", :class=>'individual',
       :before => "Element.show('loader')",
       :success => "Element.hide('loader')" %>
        </div>
      <% end %>   
    </div>
  </div>
</div>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>

  <!-- Table -->
  <div id="application-list">
    <% form_for :employee, :url=>{:controller=>'employee', :action=>'get_subjects_by_course' } do |f| %>
      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <tr class="tr-select">
          <td colspan="4" class="text-input-bg">
            <%= select :courses, :course_id,
                       @courses.map {|b| b.id},
                       {:prompt => "#{t('select_a_batch')}"},
                       {:onChange => "#{remote_function(:url => {:action => "get_subjects_by_course"},
                        :before => "Element.show('loader')",
                        :success => "Element.hide('loader')")}"} %>
            <%= image_tag("loader.gif",
              :align => "absmiddle",
              :border => 0,
              :id => "loader",
              :style =>"display: none;" ) %>
          </td>
        </tr>
        <thead>
          <tr>
            <th>Subject Name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @employee.subjects.each do |subject| %>
            <tr>
              <td><%=subject.name%></td>
              <% if subject.plans.size > 0 %>
                <td><%= link_to "edit_plan", edit_plan_path(subject.plans.first.id) %></td>
                <td><%= link_to "show_plan", plan_path(subject.plans.first.id) %></td>
              <% else %>
                <td><%= link_to "new_plan", new_subject_plan_path(:id=>subject.id) %></td>
              <%  end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

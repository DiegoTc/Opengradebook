
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="label-field-pair-select-class">
    <!--<label for="student-detail-select-class"><%= t('select_a_course') %> </label>-->
    <div class="text-input-bg"><%= select :batch, :id,
        @batches.map {|b| [b.full_name, b.id]},
        {:prompt => "#{t('select_a_course')}"},
        {:onChange => "#{remote_function(:url => {:action => "get_grades_notes"},
        :with => "'id='+value",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %></div>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>
  </div>
  <div id="students"> </div>

</div>